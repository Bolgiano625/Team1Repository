<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cccc" >
    <!-- TextView Create Skylight -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cSSkyLight"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="0dp"
        android:textSize="30sp"/>
    <!-- Create Skylight Button -->	    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="125dp"
        android:textSize="12dp"
        android:text="@string/cSSkyLight"
        android:id="@+id/createSkyLightButton"/>
    <!-- Cancel Button -->	    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="230dp"
        android:textSize="12dp"
        android:text="@string/cancel"
        android:id="@+id/cancelSkyLightButton"/>
	<!-- Spinner for Metal Frame. -->
    <Spinner
        android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="90dp"
        android:layout_marginLeft="100dp"
        android:entries="@array/metalFrameSpinner"
        android:id="@+id/mFSkyLightSpinner">
    </Spinner>
    <!-- Spinner for Metal Frame w/ ThermalBreak. -->
    <Spinner
        android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="120dp"
        android:layout_marginLeft="195dp"
        android:entries="@array/metalFrameSpinner"
        android:id="@+id/mFWTBSkyLightSpinner">
    </Spinner>
    <!-- Spinner for Wood Frame. -->
    <Spinner
        android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="160dp"
        android:layout_marginLeft="100dp"
        android:entries="@array/metalFrameSpinner"
        android:id="@+id/wFSkyLightSpinner">
    </Spinner>
    <!-- Spinner for Vinyl Frame. -->
    <Spinner
        android:layout_width="150dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:entries="@array/metalFrameSpinner"
        android:id="@+id/vFSkyLightSpinner">
    </Spinner>
	<!-- RadioGroup for skylight selections. -->
    <RadioGroup 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">
		<!-- RadioButton for Metal Frame. -->
		<RadioButton 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/mFSkyLight"
	    	android:textSize="12dp"
	    	android:id="@+id/mFSkyLightRadioButton"/>        
    	<!-- RadioButton for Metal Frame w/ Thermal Break. -->
		<RadioButton 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/mFWTBSkyLight"
	    	android:textSize="12dp"
	    	android:id="@+id/mFWTBSkyLightRadioButton"/>
		<!-- RadioButton for Wood Frame. -->
		<RadioButton 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/wFSkyLight"
	    	android:textSize="12dp"
	    	android:id="@+id/wFSkyLightRadioButton"/>
		<!-- RadioButton for Vinyl Frame -->
		<RadioButton 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/vFSkyLight"
	    	android:textSize="12dp"
	    	android:id="@+id/vFSkyLightRadioButton"/>
		<!-- RadioButton for Other -->
		<RadioButton 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/other"
	    	android:textSize="12dp"
	    	android:id="@+id/otherSkyLightRadioButton"/>
	</RadioGroup>

</RelativeLayout>