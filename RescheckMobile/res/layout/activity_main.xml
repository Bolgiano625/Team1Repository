<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00cccc"
    tools:context=".MainActivity" >

    <!-- Image displaying REScheckMobile's logo -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="390dp"
        android:paddingRight="50dp"
        android:src="@raw/logo"
        android:id="@+id/logo"/>
        
    <!-- Text displaying what the new and load project buttons do. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
       	android:paddingLeft="50dp"
        android:textSize="16sp"
        android:text="@string/titleScreenInstructionsOne"
        android:id="@+id/text1"/>
    
    <!-- New Project Button -->	    
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="40dp"
        android:background="#d9e7f5"
        android:text="@string/newProjectButton"
        android:id="@+id/newProject"/>
    
    <!-- Load Project Button -->
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="40dp"
        android:background="#d9e7f5"
        android:text="@string/loadProjectButton"
        android:id="@+id/loadProject"/>
    
    <!-- Text displaying what this application does. -->
    <TextView 
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:paddingTop="275dp"
       	android:paddingLeft="45dp"
       	android:textSize="16sp"
       	android:text="@string/titleScreenInstructionsTwo"
       	android:id="@+id/text2"/>

</RelativeLayout>