<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- Start time/date: 5:15pm, 7/2/13 -->
	<!-- Finish time/date: 5:50pm, 7/2/13-->
	
	<!-- Vertical scrollable layout to hold parameters for a project -->
    <ScrollView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollbars="horizontal"
        android:background="#FFFFFF"
        android:id="@+id/verticalRowScrollView">
     <TableRow
         android:layout_width="fill_parent"
   		 android:layout_height="40dp"
   		 >   	
        	<!-- TextView for index -->
	<TextView
	    android:id="@+id/indexColumn"
	    android:layout_width="20dp"
    	android:layout_height="30dp"
    	android:background="#FFFFFF"
    	android:text="0"
    	android:textSize="8sp"/>
	<!-- TextField for component columun -->
	<EditText
		android:id="@+id/componentColumn"
    	android:layout_width="45dp"
    	android:layout_height="30dp"
    	android:layout_marginLeft="1dp"
    	android:background="#FFFFFF"
    	android:textSize="8sp"
    	android:inputType="numberDecimal">
	</EditText>
	<!-- TextView for assemply column -->
	<TextView
	    android:id="@+id/assemblyColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
    	android:layout_height="30dp"
    	android:background="#FFFFFF"
    	android:enabled="false"
    	android:textSize="8sp"/>
	<!-- TextField for gross area column -->
	<EditText
	    android:id="@+id/grossAreaColumn"
    	android:layout_width="45dp"
    	android:layout_marginLeft="1dp"
    	android:layout_height="30dp"
    	android:textSize="8sp"
    	android:background="#FFFFFF"
    	android:hint="@string/zero"
    	android:inputType="numberDecimal">
	</EditText>
	<!-- TextField for cavity insulation R-value column -->
	<EditText
	    android:id="@+id/cavityIRValueColumn"
    	android:layout_width="45dp"
    	android:layout_marginLeft="1dp"
    	android:layout_height="30dp"
    	android:textSize="8sp"
    	android:background="#FFFFFF"
    	android:hint="@string/zero"
    	android:inputType="numberDecimal">
	</EditText>
	<!-- TextField for continuous insulation R-value column -->
	<EditText
	    android:id="@+id/continuousIRValueColumn"
    	android:layout_width="45dp"
    	android:layout_marginLeft="1dp"
    	android:layout_height="30dp"
    	android:textSize="8sp"
    	android:background="#FFFFFF"
    	android:hint="@string/zero"
    	android:inputType="numberDecimal">
	</EditText>
	<!-- TextView for u-factor column -->
	<EditText
	    android:id="@+id/uFactorColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:layout_height="30dp"
	    android:background="#FFFFFF"
	    android:inputType="numberDecimal"
	    android:color="#FF0000"
	    android:enabled="false"
	    android:textSize="8sp"/>
	<!-- TextView for shgc column -->
	<TextView
	    android:id="@+id/sHGCColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:textSize="8sp"
	    android:background="#FFFFFF"
    	android:layout_height="30dp"/>
		<!-- TextView for Depth of Insulation column -->
		<EditText
	    android:id="@+id/dOIColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:layout_height="30dp"
	    android:background="#FFFFFF"
	    android:hint="@string/zero"
	    android:inputType="numberDecimal"
	    android:textSize="8sp"/>
		<!-- TextView for Wall Height column -->
		<EditText
	    android:id="@+id/wHColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:layout_height="30dp"
	    android:background="#FFFFFF"
	    android:hint="@string/zero"
	    android:inputType="numberDecimal"
	    android:textSize="8sp"/>
		<!-- TextView for Depth Below Grade column -->
		<EditText
	    android:id="@+id/dBGColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:layout_height="30dp"
	    android:background="#FFFFFF"
	    android:hint="@string/zero"
	    android:inputType="numberDecimal"
	    android:textSize="8sp"/>
		<!-- TextView for Depth Below Grade column -->
		<EditText
	    android:id="@+id/dBIGColumn"
	    android:layout_marginLeft="1dp"
	    android:layout_width="45dp"
	    android:layout_height="30dp"
	    android:background="#FFFFFF"
	    android:hint="@string/zero"
	    android:inputType="numberDecimal"
	    android:textSize="8sp"/>
	</TableRow>
	    
    </ScrollView>
	
</TableRow>